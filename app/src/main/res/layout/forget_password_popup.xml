<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/padding_64"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/padding_16"
        android:text="@string/forget_password"
        android:textSize="20sp"
        font:customFont="Roboto-Regular.ttf" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/email_mobile_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/padding_16"
            font:customFont="Roboto-Regular.ttf" />
    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amount_to_pay_txt"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_2"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_weight="1"
            android:background="@color/orange"
            android:text="Cancel"
            android:textColor="@android:color/white"
            font:customFont="Roboto-Regular.ttf" />

        <Button
            android:id="@+id/submit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_2"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:text="Submit"
            android:textColor="@android:color/white"
            font:customFont="Roboto-Regular.ttf" />


    </LinearLayout>


</LinearLayout>