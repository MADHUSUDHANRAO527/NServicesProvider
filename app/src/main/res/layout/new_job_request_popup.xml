<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_blue"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_42">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/new_job_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NEW JOB REQUEST"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                font:customFont="Roboto-Regular.ttf" />

            <TextView
                android:id="@+id/service_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/new_job_txt"
                android:layout_marginTop="@dimen/margin_28"
                android:gravity="center"
                android:padding="@dimen/padding_8"
                android:text="Service: Elecrician"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                font:customFont="Roboto-Regular.ttf" />

            <TextView
                android:id="@+id/address_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/service_name_txt"
                android:gravity="center"
                android:padding="@dimen/padding_8"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="16sp"
                font:customFont="Roboto-Regular.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_name_txt"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/accept_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_2"
                    android:layout_marginTop="@dimen/margin_16"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:text="Accept"
                    android:textColor="@android:color/white"
                    font:customFont="Roboto-Regular.ttf" />

                <Button
                    android:id="@+id/reject_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_2"
                    android:layout_marginTop="@dimen/margin_16"
                    android:layout_weight="1"
                    android:background="@android:color/black"
                    android:text="Reject"
                    android:textColor="@android:color/white"
                    font:customFont="Roboto-Regular.ttf" />


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>